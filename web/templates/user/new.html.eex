<h1>New User</h1>

<%= if @changeset.action do %>
  <div class="alert alert-danger">
    <p>Oops, something went wrong! Please check the errors below.</p>
  </div>
<% end %>

<%= form_for @changeset, user_path(@conn, :create), fn f -> %>
  <div class="form-group">
    <%= radio_button f, :type, "lawyer", checked: "checked" %>
    <%= label f, :user_lawyer, "Lawyer" %>
    <%= radio_button f, :type, "firm" %>
    <%= label f, :user_firm, "Firm" %>
    <%= radio_button f, :type, "both" %>
    <%= label f, :user_both, "Lawyer/Firm" %>
  </div>
  <div class="form-group">
    <%= text_input f, :first_name, placeholder: "First Name", class: "form-control" %>
    <%= error_tag f, :first_name %>
  </div>
  <div class="form-group">
    <%= text_input f, :last_name, placeholder: "Last Name", class: "form-control" %>
    <%= error_tag f, :last_name %>
  </div>
  <div class="form-group">
    <%= text_input f, :phone, placeholder: "Phone", class: "form-control" %>
    <%= error_tag f, :phone %>
  </div>
  <div class="form-group">
    <%= text_input f, :email, placeholder: "Email Address", class: "form-control" %>
    <%= error_tag f, :email %>
  </div>
  <div class="form-group">
    <%= text_input f, :password_hash, placeholder: "Password", class: "form-control" %>
    <%= error_tag f, :password_hash %>
  </div>
  <div class="form-group">
    <%= text_input f, :bar_id, placeholder: "Bar ID", class: "form-control" %>
    <%= error_tag f, :bar_id %>
  </div>
  <div class="form-group">
    <%= text_input f, :bar_state, placeholder: "State Barred Id", class: "form-control" %>
    <%= error_tag f, :bar_state %>
  </div>
  <div class="form-group">
    <%= text_input f, :firm_name, placeholder: "Firm Name", class: "form-control" %>
    <%= error_tag f, :firm_name %>
  </div>
  <div class="form-group">
    <%= text_input f, :area_of_focus , placeholder: "Area of Focus", class: "form-control" %>
    <%= error_tag f, :area_of_focus %>
  </div>
  <div class="form-group">
    <%= text_input f, :street_address_1 , placeholder: "Street Address 1", class: "form-control" %>
    <%= error_tag f, :street_address_1 %>
  </div>
  <div class="form-group">
    <%= text_input f, :street_address_2 , placeholder: "Street Address 2", class: "form-control" %>
    <%= error_tag f, :street_address_2 %>
  </div>
  <div class="form-group">
    <%= text_input f, :city , placeholder: "City", class: "form-control" %>
    <%= error_tag f, :city %>
  </div>
  <div class="form-group">
    <%= text_input f, :state , placeholder: "State", class: "form-control" %>
    <%= error_tag f, :state %>
  </div>
  <div class="form-group">
    <%= text_input f, :zip , placeholder: "Zip", class: "form-control" %>
    <%= error_tag f, :zip %>
  </div>
  <%= submit "Create User", class: "btn btn-primary" %>
<% end %>
